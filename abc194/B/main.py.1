def main():
    N = int(input())
    A, B = [], []
    for _ in range(N):
        a, b = map(int, input().split())
        A.append(a)
        B.append(b)

    ans = 10 ** 9
    for a in range(N):
        for b in range(N):
            if a == b:
                ans = min(A[a] + B[b], ans)
            else:
                ans = min(max(A[a], B[b]), ans)
    print(ans)

    
