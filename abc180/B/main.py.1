import sys


def solve(N: int, x: "List[int]"):
    md = 0
    yd = 0
    cd = 0
    for i in x:
        md += abs(i)
        yd += i ** 2
        cd = max(cd, abs(i))
    print(md)
    print(yd ** 0.5)
    print(cd)

    return


