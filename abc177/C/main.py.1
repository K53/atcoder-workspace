#!/usr/bin/env python3
import sys

MOD = 1000000007  # type: int


def solve(N: int, A: "List[int]"):
    from itertools import accumulate
    S = list(accumulate(A))
    # print(S)
    ans = 0
    for i in range(1, N):
        # print(S[i], A[i])
        ans += (S[i - 1] * A[i] % MOD)
    print(ans % MOD)
    return



