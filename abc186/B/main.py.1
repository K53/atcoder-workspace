#!/usr/bin/env python3
import sys

def main():
    H, W = map(int, input().split())
    A = []
    for i in range(H):
        A.extend(list(map(int, input().split())))
    m = min(A)
    sum = 0
    for a in A:
        sum += a
    sum -= len(A) * m
    print(sum)
        

if __name__ == '__main__':
    main()
